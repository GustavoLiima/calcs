<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calculadora Financeira Pro</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />
    <meta name="author" content="Calculadora Financeira Pro" />
    
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CalculadoraFinanceiraPro.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header-modern">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <i class="bi bi-calculator-fill me-2"></i>
                    Calculadora<span class="text-warning">Pro</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-fill me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-calculator me-1"></i>Calculadoras
                            </a>
                            <ul class="dropdown-menu shadow-lg">
                                <li><h6 class="dropdown-header"><i class="bi bi-briefcase-fill"></i> Trabalho</h6></li>
                                <li><a class="dropdown-item" asp-page="/Calculadoras/SalarioLiquido">
                                    <i class="bi bi-cash-stack me-2"></i>Salário Líquido</a></li>
                                <li><a class="dropdown-item" asp-page="/Calculadoras/HoraExtra">
                                    <i class="bi bi-clock-fill me-2"></i>Hora Extra</a></li>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header"><i class="bi bi-house-fill"></i> Imobiliário</h6></li>
                                <li><a class="dropdown-item" asp-page="/Calculadoras/FinanciamentoImobiliario">
                                    <i class="bi bi-house-door-fill me-2"></i>Financiamento Casa</a></li>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header"><i class="bi bi-car-front-fill"></i> Veículos</h6></li>
                                <li><a class="dropdown-item" asp-page="/Calculadoras/FinanciamentoVeiculo">
                                    <i class="bi bi-car-front-fill me-2"></i>Financiamento Carro</a></li>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header"><i class="bi bi-graph-up"></i> Investimentos</h6></li>
                                <li><a class="dropdown-item" asp-page="/Calculadoras/JurosCompostos">
                                    <i class="bi bi-graph-up-arrow me-2"></i>Juros Compostos</a></li>
                                <li><a class="dropdown-item" asp-page="/Calculadoras/EmprestimoPessoal">
                                    <i class="bi bi-credit-card me-2"></i>Empréstimo Pessoal</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer-modern bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-calculator-fill me-2"></i>
                        Calculadora<span class="text-warning">Pro</span>
                    </h5>
                    <p class="text-light">
                        Calculadoras financeiras gratuitas e precisas para te ajudar nas melhores 
                        decisões financeiras. Simule financiamentos, investimentos e muito mais.
                    </p>
                </div>
                
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Calculadoras</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#" class="text-light">Salário Líquido</a></li>
                        <li><a href="#" class="text-light">Financiamento</a></li>
                        <li><a href="#" class="text-light">Juros Compostos</a></li>
                        <li><a href="#" class="text-light">Empréstimo</a></li>
                    </ul>
                </div>
                
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Recursos</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#" class="text-light">Blog Financeiro</a></li>
                        <li><a href="#" class="text-light">Guias</a></li>
                        <li><a href="#" class="text-light">FAQ</a></li>
                        <li><a href="#" class="text-light">Contato</a></li>
                    </ul>
                </div>
                
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Legal</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#" class="text-light">Política de Privacidade</a></li>
                        <li><a href="#" class="text-light">Termos de Uso</a></li>
                        <li><a href="#" class="text-light">Disclaimer</a></li>
                    </ul>
                </div>
                
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Newsletter</h6>
                    <p class="text-light small">Receba dicas financeiras semanais</p>
                    <div class="input-group input-group-sm">
                        <input type="email" class="form-control" placeholder="Seu email">
                        <button class="btn btn-warning" type="button">
                            <i class="bi bi-send-fill"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <hr class="my-4">
            
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-light small mb-0">
                        &copy; 2024 Calculadora Financeira Pro. Todos os direitos reservados.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-light small mb-0">
                        <i class="bi bi-shield-check me-1"></i>
                        Cálculos precisos e atualizados
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
